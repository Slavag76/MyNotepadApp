<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.details.NoteDetailsFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/notepad_text_name"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3"
        tools:text="@string/note_1"
        android:layout_margin="@dimen/default_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/notepad_text_description"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3"
        tools:text="@string/description_1"
        android:layout_margin="@dimen/default_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/notepad_text_data"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3"
        tools:text="@string/date_1"
        android:layout_margin="@dimen/default_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>